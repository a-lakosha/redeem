<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="theme_redeem.VerticalCarouselItemsOption">
    <BuilderRow label.translate="Carousel Items">
        <BuilderButton type="'success'" className="'flex-grow-1'" preview="false" title.translate="Add Item" action="'addCarouselItem'"> Add </BuilderButton>
        <BuilderButton type="'danger'" className="'flex-grow-1'" preview="false" title.translate="Remove Item" action="'removeCarouselItem'"> Remove </BuilderButton>
    </BuilderRow>
    <BuilderRow label.translate="Speed (seconds)" level="1">
        <BuilderNumberInput action="'setVerticalCarouselSpeed'" 
            default="4" 
            unit="'s'" 
            step="0.5" 
            min="1" 
            max="10" 
            preview="false"/>
    </BuilderRow>
</t>

</templates>